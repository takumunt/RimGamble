<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- Slot Machine -->
  <ThingDef ParentName="BuildingBase">
    <defName>RimGamble_SlotMachine</defName>
    <label>slot machine</label>
    <description>A machine that simulates gambling.</description>
    <tickerType>Normal</tickerType>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>RimGamble/SlotMachine/SlotMachine</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2.4,2.4)</drawSize>
      <shadowData>
        <volume>(0.5,0.35,0.4)</volume>
      </shadowData>
    </graphicData>
    <defaultPlacingRot>South</defaultPlacingRot>
    <fillPercent>0.40</fillPercent>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <passability>PassThroughOnly</passability>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <pathCost>50</pathCost>
    <minifiedDef>MinifiedThing</minifiedDef>
    <socialPropernessMatters>true</socialPropernessMatters>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <building>
      <joyKind>Gambling</joyKind>
    </building>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>25000</WorkToBuild>
      <Mass>50</Mass>
      <Flammability>0.5</Flammability>
      <Beauty>0</Beauty>
      <JoyGainFactor>1.3</JoyGainFactor>
      <MarketValue>800</MarketValue>
    </statBases>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <designationCategory>Joy</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>75</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
  
  <!-- Gacha Machine -->
  <ThingDef ParentName="BuildingBase">
    <defName>RimGamble_GachaMachine</defName>
    <label>gacha machine</label>
    <description>A machine that despises capsules that contain a random toy or trinket. Must contain Gacha Capsules to be used.</description>
    <tickerType>Normal</tickerType>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>RimGamble/GachaMachine/GachaMachine</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(0.5,0.35,0.4)</volume>
      </shadowData>
    </graphicData>
    <defaultPlacingRot>South</defaultPlacingRot>
    <fillPercent>0.40</fillPercent>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <passability>PassThroughOnly</passability>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <pathCost>45</pathCost>
    <minifiedDef>MinifiedThing</minifiedDef>
    <socialPropernessMatters>true</socialPropernessMatters>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <building>
      <joyKind>Gambling</joyKind>
    </building>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>25000</WorkToBuild>
      <Mass>50</Mass>
      <Flammability>0.5</Flammability>
      <Beauty>0</Beauty>
      <JoyGainFactor>1.3</JoyGainFactor>
      <MarketValue>800</MarketValue>
    </statBases>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <designationCategory>Joy</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <comps>
      <li Class="RimGamble.CompProperties_GachaRefuelable">
        <fuelCapacity>50.0</fuelCapacity>
        <fuelConsumptionRate>100</fuelConsumptionRate>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <fuelLabel>Gacha Balls</fuelLabel>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
  </ThingDef>
</Defs>