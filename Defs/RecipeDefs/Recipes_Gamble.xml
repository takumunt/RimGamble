<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <RecipeDef>
    <defName>Make_GachaBallBasic</defName>
    <label>make gacha ball</label>
    <description>Craft a gacha ball for the gacha machine.</description>
    <jobString>Crafting gacha ball.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>1000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <recipeUsers>
      <li>FueledSmithy</li>
      <li>ElectricSmithy</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Leathers</li>
          </categories>
          <disallowedThingDefs>
            <li>Leather_Thrumbo</li>
          </disallowedThingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Leathers</li>
      </categories>
      <disallowedThingDefs>
        <li>Leather_Patch</li>
        <li>Leather_Human</li>
      </disallowedThingDefs>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RimGamble_GachaBallBasic>1</RimGamble_GachaBallBasic>
    </products>
    <skillRequirements>
      <Crafting>4</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

