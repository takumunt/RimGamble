<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defname>RimGamble_LootCrate</defname>
    <label>loot crate</label>
    <description>A small box filled with pride and accomplishment.</description>

    <!-- Visual related things -->
    <graphicData>
      <texPath>RimGamble/LootCrate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType></shaderType> <!-- We will not be using a shader for the time being -->
    </graphicData>

    <!-- Various Stats-->
    <statBases>
      <DeteriorationRate>0.5</DeteriorationRate>
      <MarketValue>200</MarketValue>
      <Mass>0.3</Mass>
      <Flammability>0.5</Flammability>
    </statBases>

  <!-- comp for usability, causes crate to dispense item and disappear upon use -->
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0_label}</useLabel>
        <showUseGizmo>true</showUseGizmo>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>RimGamble.CompUseEffect_DispenseRandomItem</compClass>
      </li>
      <li Class="CompProperties_UseEffectDestroySelf" />
    </comps>
  </ThingDef>
</Defs>