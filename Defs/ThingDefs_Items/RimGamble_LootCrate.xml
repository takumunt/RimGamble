<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="ResourceBase" Name="RimGamble_LootCrateBase" Abstract="True">
    <statBases>
      <DeteriorationRate>0.5</DeteriorationRate>
      <MarketValue>200</MarketValue>
      <Mass>0.3</Mass>
      <Flammability>0.5</Flammability>
    </statBases>

    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0_label}</useLabel>
        <showUseGizmo>true</showUseGizmo>
      </li>

      <li Class="CompProperties_UseEffect">
        <compClass>RimGamble.CompUseEffectLootCrate_Base</compClass>
      </li>

      <li Class="CompProperties_UseEffectDestroySelf" />
    </comps>
  </ThingDef>

  <ThingDef ParentName="RimGamble_LootCrateBase">
    <defName>RimGamble_LootCrateBasic</defName>
    <label>basic loot crate</label>
    <description>A small box filled with pride and accomplishment.</description>
    <graphicData>
      <texPath>RimGamble/LootCrate/LootCrate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    
    <modExtensions>
      <li Class="RimGamble.ModExtension_LootCrate">
        <lootItems>
          <li Class="RimGamble.LootItem">
            <item>Steel</item>
            <itemQuantMin>1</itemQuantMin>
            <itemQuantMax>10</itemQuantMax>
            <itemWeight>100</itemWeight>
          </li>
          <li Class="RimGamble.LootItem">
            <item>Plasteel</item>
            <itemQuantMin>1</itemQuantMin>
            <itemQuantMax>10</itemQuantMax>
            <itemWeight>50</itemWeight>
          </li>
        </lootItems>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>